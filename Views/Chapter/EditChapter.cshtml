@page
@model BrainStormEra.Views.Chapter.EditChapterModel
@{
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Chapter</title>
    <!-- Bootstrap CSS from CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Base CSS (Common Styles) -->
    <link rel="stylesheet" href="~/css/Chapter/EditChapter.css">
    <link href="~/css/baseChapter.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 bg-light sidebar p-3">
                <a class="btn btn-outline-secondary w-100 mb-3" href="../html/AddNewChapter.html">Add Chapter</a>
                <a class="btn btn-outline-secondary w-100 mb-3" href="../html/DeleteChapter.html">Delete Chapter</a>
                <a class="btn btn-primary w-100 mb-3" href="../html/ViewChapter.html">View Chapter</a>
            </div>

            <!-- Main Content for Edit Chapter -->
            <div class="col-md-9 d-flex align-items-starts vh-100">
                <div class="card w-100 ">
                    <div class="card-header gradient-header">
                        VIEW CHAPTER > EDIT CHAPTER
                    </div>
                    <div class="card-body">
                        <form>
                            <!-- Chapter Title -->
                            <div class="mb-3">
                                <label for="chapterTitle" class="form-label">Title Chapter</label>
                                <input type="text" class="form-control" id="chapterTitle" value="Introduction">
                            </div>
                            <!-- Chapter Description -->
                            <div class="mb-3">
                                <label for="chapterDescription" class="form-label">Chapter Description</label>
                                <textarea class="form-control" id="chapterDescription"
                                    rows="5">This chapter dives into more complex topics.</textarea>
                            </div>
                            <!-- Save Button -->
                            <div class="text-center mt-2">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="bg-secondary text-white py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3 mb-md-0">
                    <h3>BrainStormEra</h3>
                    <div class="social-icons my-2">
                        <i class="fab fa-facebook me-2"></i>
                        <i class="fab fa-instagram me-2"></i>
                        <i class="fab fa-x-twitter"></i>
                    </div>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <h4>Contact Us</h4>
                    <p class="mb-1">Tel: 123-456-789</p>
                    <p>Email: brainstormera@edu.vn</p>
                </div>
                <div class="col-md-4">
                    <h4>Address</h4>
                    <p class="mb-1">123 Nguyen Van Cu, Cai Rang</p>
                    <p>District, Cantho, Vietnam</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>